<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Editing Book</h1>
	<%= form_for(@book) do |b| %>

		<div class="field">
			<%= b.label :title, "Title" %>
			<p><%= b.text_field :title %></p>
		</div>

		<div class="field">
			<%= b.label :body, "Opinion" %>
			<p><%= b.text_area :body %></p>
		</div>

		<div class="action">
			<%= b.submit 'Create Book', class: "btn btn-primary" %>
		</div>

	<% end %>

</body>
</html>